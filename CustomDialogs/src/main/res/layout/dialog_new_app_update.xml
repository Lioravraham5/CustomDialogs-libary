<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rate_dialog_background"
            android:orientation="vertical">

            <View
                android:id="@+id/new_app_update_dialog_template"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/dialog_color_1"/>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="-75dp"
                android:background="@drawable/round_back_white_stroke_1000"
                android:padding="20dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_back_white_1000"/>

                <ImageView
                    android:id="@+id/new_app_update_dialog_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:padding="25dp"
                    android:src="@drawable/playstore"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/new_app_update_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Available"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/grey_700_primary"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/new_app_update_second_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/grey_700_primary"
                android:text="A new version of this app is available. Please update to the latest version."/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/new_app_update_may_be_later_BTN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/grey_400_primary"
                    android:textColor="@color/button_text_color"
                    android:text="May Be, later" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/new_app_update_update_now_BTN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/button_text_color"
                    android:backgroundTint="@color/light_blue_900_light"
                    android:text="Update now"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>